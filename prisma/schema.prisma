
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}


enum Role {
  USER
  FREELANCER
  POSTER
  ADMIN
}

model User {
  id               String   @id @default(cuid())
  address          String   @unique
  role             Role     @default(USER)

  // Profile
  headline         String?
  summary          String?
  skills           String[] @default([])
  experience       String?
  education        String?
  links            String[] @default([])


  didHash          String?
  verificationCid  String?
  profileCid       String?
  cvCid            String?
  avatarCid        String?
  isVerifiedDid    Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lastLoginAt      DateTime?

  @@index([createdAt])
  @@index([updatedAt])
  @@index([address])
  @@index([headline])
}



